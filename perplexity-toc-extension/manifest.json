{
  "manifest_version": 3,
  "name": "Perplexity TOC - Table of Contents",
  "version": "1.0.0",
  "description": "Agrega una tabla de contenidos interactiva en las páginas de búsqueda de Perplexity.ai",
  "author": "Enrique Cardoza",
  
  "permissions": [],
  
  "host_permissions": [
    "https://www.perplexity.ai/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}